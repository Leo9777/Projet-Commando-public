import matplotlib.pyplot as pp
from mpl_toolkits.mplot3d import Axes3D
import mpmath
import numpy as np
from tkinter import *
from PIL import Image, ImageTk

class Images():
    def __init__(self, parent, lambda_):
        self.longueur_onde = lambda_
        self.parent = parent
        
    def trace_graphe(self, longueur=0, largeur=0):
        x = np.linspace(0,100)
        fig = pp.figure()
        pp.plot(x, int(scale_nombre_fentes.get())*x*x)
        pp.savefig("fig1.png")
        
        new_img = ImageTk.PhotoImage(Image.open("fig1.png"))
        img = Label(self.parent, image=new_img)
        img.image = new_img
        img.grid(column=0, row=0)
        
    def trace_figures(self, longueur=0, largeur=0):
        x = np.linspace(0,100)
        X, Y = np.meshgrid(x, int(scale_nombre_fentes.get())*x*x)
        fig = pp.figure()
        pp.imshow(X+Y)
        pp.savefig("fig2.png")
        
        new_img = ImageTk.PhotoImage(Image.open("fig2.png"))
        img = Label(self.parent, image=new_img)
        img.image = new_img
        img.grid(column=0, row=0)
  
def clic():
    interferences.trace_figures()
    profil.trace_graphe()
  


fenetre = Tk()
fenetre.resizable(width=0, height=0)

frame_HG = Frame(fenetre)
frame_HD = Frame(fenetre)
frame_BG = Frame(fenetre)
frame_HG.grid(column=0, row=0)
frame_HD.grid(column=1, row=0)
frame_BG.grid(column=0, row=1)


interferences = Images(frame_HG, 50)
profil = Images(frame_BG, 50)




scale_lambda = Scale(frame_HD, orient=HORIZONTAL, label="Longueur d'onde", length=130)
scale_lambda.grid(column=0, row=0)

scale_nombre_fentes = Scale(frame_HD, orient=HORIZONTAL, label="Nombre de fentes", length=130)
scale_nombre_fentes.grid(column=0, row=1)

scale_taille_fentes = Scale(frame_HD, orient=HORIZONTAL, label="Taille des fentes", length=130)
scale_taille_fentes.grid(column=0, row=2)

scale_distance_fentes = Scale(frame_HD, orient=HORIZONTAL, label="Distance interfentes", length=130)
scale_distance_fentes.grid(column=0, row=3)

scale_angle = Scale(frame_HD, orient=HORIZONTAL, label="Angle", length=130)
scale_angle.grid(column=0, row=4)

txt_contraste = Label(frame_HD, text="Contraste: []")
txt_contraste.grid(column=0, row=5)

bouton = Button(frame_HD, text='Changer valeur', command = clic)
bouton.grid(column=0, row=6)

fenetre.mainloop()
